@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet.</h3>
} 
else
{
  <ul>
    @foreach (Client client in Model)
    {
      <li>@Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId }) | Stylist: @client.Stylist.StylistName</li>
    }
  </ul>
}
<div id="footer">
  <p>@Html.ActionLink("Return to Stylists", "Index", "Stylists")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>